    <script>




        function setOrderToCancelled() {

            const orderedItem = document.querySelector('.order-status .status-item:first-child');
            const cancelledItem = document.querySelector('.order-status .status-item:nth-child(2)');

            orderedItem.classList.remove('active');
            cancelledItem.classList.add('active');
        }



        document.addEventListener('DOMContentLoaded', function () {
            const status = document.getElementById('Status').value

            if (status === "cancelled") {

                document.querySelectorAll('.status-item').forEach(function (element) {
                    element.classList.add('active');
                });
                document.getElementById("delivered").style.display = "none"
                document.getElementById("cancelled").style.display = "block"

                
            } 
            if( status === "delivered"){
                document.querySelectorAll('.status-item').forEach(function (element) {
                    element.classList.add('active');
                })
            }

            const cancelbtn = document.getElementById("cancel");
            cancelbtn.addEventListener('click', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, cancel it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        const productId = document.getElementById('productId').value
                        const orderId = document.getElementById('orderId').value.trim();
                        axios.patch('/cancelorder', { orderId, productId })
                            .then(res => {
                                if (res.data.success) {

                                    Swal.fire({
                                        title: 'Cancelled!',
                                        text: 'Your item has been cancelled.',
                                        icon: 'success',
                                        confirmButtonText: 'OK'
                                    });

                                    cancelbtn.style.display = 'none'

                                    document.querySelectorAll('.status-item').forEach(function (element) {
                                        element.classList.add('active');
                                    });
                                    document.getElementById("delivered").style.display = "none"
                                    document.getElementById("cancelled").style.display = "block"


                                } else {

                                    Swal.fire({
                                        title: 'Error!',
                                        text: 'There was a problem cancelling your item.',
                                        icon: 'error',
                                        confirmButtonText: 'OK'
                                    });
                                }
                            }).catch(err => {

                                console.log('error in axios');
                                Swal.fire({
                                    title: 'Error!',
                                    text: 'There was a problem with the request.',
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                            });
                    }
                });
            });
        });

    </script>


