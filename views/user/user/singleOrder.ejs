            align-items: center;
            position: relative;
        }


        .status-item::before {
            content: '';
            position: absolute;
            left: -50%;
            top: 50%;
            transform: translateY(-50%);
            width: 100%;
            height: 2px;
            background-color: #ccc;
            z-index: 0;
        }


        .status-item:first-child::before {
            display: none;
        }

        .status-icon {
            width: 30px;
            height: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 5px;
            font-size: 16px;
            color: #fff;
            border-radius: 50%;
            background-color: #ddd;
            z-index: 1;
        }

        .active .status-icon {
            background-color: #4CAF50;
        }

        .active::before {
            background-color: #4CAF50;
        }

        .status-line {
            width: 250px;
        }

        .actives .status-icon {
