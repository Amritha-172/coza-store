                                    <div class="row">
                                        <div class="col-md-8">
                                            <h2 class="mb-4">Order Details </h2>
                                        </div>

                                    </div>

                                    <% if(orderDetails){%>
                                        <% orderDetails.forEach(function(order) { %>

                                            <% order.oderedItem.forEach(item=>{%>


                                                <% if(item.productId && item.productId.productName){%>


                                                    <a href="/singleorder?orderId=<%= order._id %>&productId=<%= item.productId._id %>"
                                                        class="text-decoration-none" style="color: black;">
                                                        <div class="border mb-"
                                                            style="border-radius: 5px; background-color: white;">
                                                            <div class="row mb-4 d-flex align-items-center ">
                                                                <!-- Order Items -->
                                                                <div class="col-6 mt-3 ms-2 ">
                                                                    <div class="d-flex align-items-center">
                                                                        <img src="/multerimages/<%=item.productId.image[0]%>"
                                                                            alt="Product Image" class="order-image me-2"
                                                                            style="width: 80px; height: auto;">
                                                                        <div>
                                                                            <h6 class="m-0">
                                                                                <%=item.productId.productName%>
                                                                            </h6>
                                                                            <small class="text-muted">Size:
                                                                                <%=item.productId.size%>,
                                                                                    Color:blue
                                                                            </small>
                                                                            <div><span>Qty:<%=item.quantity%> </span>
                                                                            </div>
                                                                            <div><span>Price: ₹<%=item.quantity *
                                                                                        item.productId.price %> </span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!-- Order Status at the end of the row -->
                                                                <div class="col-auto d-flex justify-content-center"
                                                                    style="margin-left: 200px">
                                                                    <div class="d-flex ">
                                                                        <!-- Delivery status line -->


                                                                        <p class="border btn border-black ">
                                                                        <%=item.productStatus%></p>
                                                                    



                                                                    </div>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </a>
                                                    <%}%>
                                                        <%})%>
                                                            <%})%>
                                                                <%}%>

                                </div>


