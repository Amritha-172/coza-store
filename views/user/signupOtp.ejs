<body>
    <nav class="navbar navbar-expand-lg navbar-dark  bg-primary-subtle fixed-top">
        <div class="container">
            <!-- CozaStore Logo -->
            <a class="navbar-brand" href="#">
                <img src="/images/icons/logo-01.png" alt="CozaStore Logo">
            </a>
    
            <!-- Toggle Button for Mobile View -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-black " href="home">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black" href="products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black" href="About us">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black" href="contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container login-container w-auto ">
        <div class="image-container">
            <img src="/images/login.jpg" alt="CozaStore Image">
        </div>
        <div class="form-container">
            <h4 class="mb-4">OTP Verification</h4>
            <form action="/newhome" method="post">
            <form id="otpForm" class="d-flex justify-content-between" >
                <input type="text" class="otp-input" maxlength="1" >
                <input type="text" class="otp-input" maxlength="1" >
                <input type="text" class="otp-input" maxlength="1" >
                <input type="text" class="otp-input" maxlength="1" >
                
                <div class="d-flex justify-content-lg-evenly pt-5 ">
                    <button type="submit" class="btn btn-success mb-2">Verify OTP</button>
                    <button id="resendButton" class="btn btn-primary  ">Resend OTP</button>
                    <div id="countDown"></div>
                </div>
            </form>
        </form>
        </div>
    </div>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
