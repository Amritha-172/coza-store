<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product - Admin Dashboard</title>
    <link rel="stylesheet" href="/css/adminEdit.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <header class="coza-header">
        <div class="container">
            <div class="logo">Coza Store</div>
            <!-- Add more header elements or navigation links as needed -->
        </div>
    </header>
    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="logo">Admin Dashboard</div>
            <br> <br>
            <ul class="">
                <li><a href="/admin/dashboard" class="active"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="/admin/userlist" class="active"><i class="fa-solid fa-users"></i> Users</a></li>
                <li><a href="/admin/productlist" class="active "><i class="fas fa-shopping-cart"></i> Products</a></li>
                <li><a href="/admin/oderDetails" class="active "><i class="fas fa-file-alt"></i> Orders</a></li>
                <li><a href="/admin/category " class="active"><i class="fas fa-list"></i> Categories</a></li>
                <li><a href="/admin/Coupon" class="active"><i class="fa-solid fa-money-bill"></i> Coupon</a></li>
                <li><a href="/admin/offer" class="active"><i class="fa-solid fa-tag"></i> offer</a></li>
                <li><a href="/admin/banner" class="active"><i class="fa-regular fa-note-sticky"></i>Banner</a></li>
                <li><a href="/admin/logout" class="active"><i class="fa-solid fa-arrow-right-from-bracket"></i>
                        Logout</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="topbar">
                <div class="menu-toggle">&#9776; Menu</div>
                <div class="user-profile">
                    <!-- <img src="images/user-avatar.jpg" alt="User Avatar"> -->
                    <span>Admin User</span>
                </div>
            </div>

            <div class="content">
                <h1>Add PRODUCT</h1>
                <!-- Inside your form for editing product details -->
                <form class="" action="/admin/addproduct" method="post" enctype="multipart/form-data">
                    <div class="add">
                        <div class="mb-3">

                            <%if(messages.length>0){%>
                                <div style="color: red;">
                                    <%=messages[0]%>
                                </div>
                                <%}%>
                                    <label for="productName" class="form-label">Product Name</label>
                                    <p id="erroname"></p>
                                    <input type="text" class="form-control" id="productName"
                                       name="productName" required>
                        </div>
                               
                        <div class="col-md-12">
                            <!-- Category Dropdown -->
                            <div class="mb-3">
                                <label for="category" class="form-label">Category:</label>
                                <select name="category" id="category" class="form-select">
                                    <option ><--select category --></option>
                                    <% categories.forEach((category)=>{ %>
                                        <option  value="<%= category._id %>"><%= category.catName %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <p id="error"></p>
                            <label for="price" class="form-label">Price</label>
                            <input type="number" class="form-control" id="price" name="price" value="" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">description</label>

                            <input type="text" class="form-control" id="price" name="description" required>

                        </div>

                        <div class="mb-3">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="" required>
                        </div>

                        <div class="mb-3">
                            <label for="size" class="form-label">Size</label>
                            <input type="text" class="form-control" id="size" name="size" value="" required>
                        </div>

                        <div class="mb-3">
                            <label for="color" class="form-label">Color</label>
                            <input type="text" class="form-control" id="color" name="color" value="" required>
                        </div>

                        <div class="mb-3">
                            <label for="offer" class="form-label">offer</label>
                            <input type="text" class="form-control" id="offer" name="offer" value="" required>
                        </div>
                    </div>
                    <div class=" d-flex justify-content-center " style="width: 700px;">
                        <div class="d-flex justify-content-evenly ">
                            <div style="width: 120px; height: 120px;">
                                <label for="image1" class="form-label">Image
                                    <img id="preview1" style="width: 110px; height: 110px;" src="https://bit.ly/3ubuq5o" alt="">
                                </label>
                                <input type="file" class="form-control" id="image1" name="cropImages" value=""
                                    style="display: none;"  onchange="updateImage('image1', 'preview1')">
                            </div>

                            <div class="" style="width: 120px; height: 120px;">
                                <label for="image2" style="width: 100px; height: 100px;" class="form-label">Image
                                    <img id="preview2" style="width: 110px; height: 110px;" src="https://bit.ly/3ubuq5o" alt="">
                                </label>
                                <input type="file" class="form-control" id="image2" name="cropImages" value=""
                                    style="display: none;"  onchange="updateImage('image2', 'preview2')">
                            </div>

                            <div class="mb-3 ">
                                <label for="image3" id="fisrtimg" style="width: 100px; height: 100px;"
                                    class="form-label">Image
                                    <img id="preview3" style="width: 110px; height: 110px;" src="https://bit.ly/3ubuq5o" alt="">
                                </label>
                                <input type="file" class="form-control" id="image3" name="cropImages" value=""
                                    style="display: none;"  onchange="updateImage('image3', 'preview3')">
                            </div>
                        </div>
                    </div>
                    <div class="d-flex  justify-content-center ">

                        <button type="submit" class="btn btn-dark   mt-4 "
                            style="width: 100px; height: 50px; ">Add</button>
                    </div>

                </form>

            </div>
        </main>
    </div>

    <script>
        function updateImage(inputId, previewId) {
            var input = document.getElementById(inputId);
            var preview = document.getElementById(previewId);
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        document.addEventListener('DOMContentLoaded',function(){
             const productElem=document.getElementById('productName')
             productElem.addEventListener('blur',function(){
                 const erroname=document.getElementById('erroname')
                const productname=document.getElementById('productName').value
                console.log(productname);
                if(productname.trim() == " "){
                    erroname.innerHTML='product name required'
                    erroname.style.color='red'
                    
                }else{
                    erroname.innerHTML=' '
                }
                

             })
             document.getElementById('price').addEventListener('blur',function(e){
            e.preventDefault()
              const price=  document.getElementById('price').value
              if(price<1){
                const error=document.getElementById('error')
                   error.innerHTML="Please Eneter Valid number"
                   error.style.color='red'

              }else{
                error.innerHTML=" "
              }

           })


        })
        </script>

    <script src="js/dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

</body>

</html>