                                    </ul>
                            </aside>
                    
                            </ul>
                        </div>
                   
                </div>
            </nav>

            <main class="main-content container-fluid">
                <div class="row justify-content-center">
                    <!-- Adjust the column size for different screens -->
                    <div class="col-12 col-sm-10 col-md-8 col-lg-6 bg-white mt-5    ">
                        <h2 class="mt-3">ADD CATEGORY</h2>
                        <form action="/admin/addcategory" method="post">
                            <div class="mb-3">
                                <label for="categoryName" class="form-label">Category Name</label>
                                <!-- Display messages if any -->
                                <% if (messages.length>0) {%>
                                    <div class="alert alert-danger" role="alert">
                                        <%=messages[0]%>
                                    </div>
                                <%}%>
                                <input type="text" class="form-control" id="catName" pattern="^[A-Za-z][A-Za-z\s]*[A-Za-z]$" name="catName" placeholder="Enter category name" required>
                            </div>
            
                            <div class="mb-3">
                                <label for="categoryDescription" class="form-label">Category Description</label>
                                <textarea class="form-control" id="description" name="description" placeholder="Enter category description" rows="3" required></textarea>
                            </div>

                            <div class="image-upload-container" style="width: 250px; height: 200px;">
                                <div class="close-icon" onclick="deleteImage('image1', 'preview1');">&times;
                                </div>
                                <label for="image1" class="form-label">
                                    <img id="preview1" src="https://bit.ly/3ubuq5o" alt="">
                                </label>
                                <input type="file" class="form-control" id="image1" name="cropImages"
                                    style="display: none;">
                                <button type="button"
                                    onclick="document.getElementById('image1').click();">Upload
                                    Image</button>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Add Category</button>

                        </form>
                    </div>
                </div>
            </main>
            
    </div>
    </div>

    <script src="js/dashboard.js"></script>
