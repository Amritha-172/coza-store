
<%- include('./../layouts/adminLayout/header',{pageTitle: 'Userlist'})%>        
           
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    
                    <div class="table-responsive">
                
                            <div class="content">
                                <h1>USER DETAILS</h1>
                                <p>User List:</p>
                                <table class="table table-striped table-sm">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone </th>
                                            <th>verified</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                
                                        <% for(let i=0 ;i < locals.userlist.length ; i++ ) { %>
                                            <tr>
                                                <td>
                                                    <%= i+1 %>
                                                </td>
                                                <td>
                                                    <%= locals.userlist[i].name %>
                                                </td>
                                                <td>
                                                    <%=locals.userlist[i].email %>
                                                </td>
                                                <td>
                                                    <%=locals.userlist[i].mobile %>
                                                </td>
                                                <td>
                                                    <%= locals.userlist[i].is_verified %>
                                                </td>
                                                <td class="text-end">
                                               
                                                    <% if (locals.userlist[i].is_blocked) { %>
                
                                                        <button type="submit" class="badge rounded-pill alert-warning"
                                                            style="color: #a85a0b; border: 0px; background-color: #f9ba7a;"><a
                                                                href="/admin/unblockuser?id=<%= userlist[i]._id%>"
                                                                class="text-decoration-none"> Unblock</a></button>
                                                        <% } else { %>
                                                            <button type="submit" class="badge rounded-pill alert-warning"
                                                                style="color: #a85a0b; border: 0px; background-color: #f9ba7a;"><a
                                                                    href="/admin/blockuser?id=<%= userlist[i]._id%>"
                                                                    class="text-decoration-none">Block</a></button>
                                                            <% } %>
                                                </td>
                                            </tr>
                                            <%}%>
                
                                             
                                    </tbody>
                                </table>
                                
                                <nav aria-label="Page navigation example" class="d-flex justify-content-end  my-4">
                                    <ul class="pagination">
                                        <% if(hasPreviousPage) { %>
                                            <li class="page-item"><a class="page-link" href="/admin/userlist?page=1">First</a></li>
                                            <li class="page-item"><a class="page-link" href="/admin/userlist?page=<%= previousPage %>">Previous</a></li>
                                        <% } else { %>
                                            <li class="page-item disabled"><span class="page-link">First</span></li>
                                            <li class="page-item disabled"><span class="page-link">Previous</span></li>
                                        <% } %>
                                
                                        <% for(let i = 1; i <= totalPages; i++) { %>
                                            <li class="page-item <%= currentPage === i ? 'active' : '' %>"><a class="page-link" href="/admin/userlist?page=<%= i %>"><%= i %></a></li>
                                        <% } %>
                                
                                        <% if(hasNextPage) { %>
                                            <li class="page-item"><a class="page-link" href="/admin/userlist?page=<%= nextPage %>">Next</a></li>
                                            <li class="page-item"><a class="page-link" href="/admin/userlist?page=<%= lastPage %>">Last</a></li>
                                        <% } else { %>
                                            <li class="page-item disabled"><span class="page-link">Next</span></li>
                                            <li class="page-item disabled"><span class="page-link">Last</span></li>
                                        <% } %>
                                    </ul>
                                </nav>

                            </div>
                        </main>
                    </div>
                   
                   
                    
               
          
           
         
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/dashboard.js"></script>
</body>
</html>
